@model Homework5.Models.DMVEntry

@{
    ViewBag.Title = "Create";
}

<h2>Change of Address Request Form</h2>

<!--This will add in a <form> tag. POST processing will now begin here-->
@using (Html.BeginForm())
{
    <!--This will create our token that we will use to validate the POST
        request for this form. The validation will use an AntiForgeryToken attribute above
        the ActionMethod using this form.-->
    @Html.AntiForgeryToken()
    <form method="post" action="">

        <div class="form-row">
    
            <div class="form-group col-md-6">
                <!--Retrieve the label from the model class information of LicenseNumber.-->
                @Html.LabelFor(model => model.LicenseNumber)
                @Html.EditorFor(model => model.LicenseNumber, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "License Number"} })
                @Html.ValidationMessageFor(model => model.LicenseNumber, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                
                @Html.LabelFor(model => model.DateOfBirth)
                <!--This will create a html input section with the attributes of the following strings (based in Bootstrap).-->
                @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class ="form-control", @type ="date", @placeholder = "2005/08/15 23:45:00" } })
                <!--This one line of  Razor code will do exactly the same thing as this HTML code. 
                    <label for="inputDOB">Date of Birth</label>
                <input type="text" class="form-control" id="inputDOB" placeholder="2005/08/15 23:45:00">
                -->
                @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group col-md-6">
            
            @Html.LabelFor(model => model.FullName)
            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @type = "text", @class = "form-control", @placeholder = "John T. Doe"} })
            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
    
        </div>

        <div class="form-group col-md-6">

            @Html.LabelFor(model => model.StreetAddress)
            @Html.EditorFor(model => model.StreetAddress, new { htmlAttributes = new { @type = "text", @class = "form-control", @placeholder = "1234 Main Street"} })
            @Html.ValidationMessageFor(model => model.StreetAddress, "", new { @class = "text-danger" })

        </div>

        <div class="form-row">
    
            <div class="form-group col-md-6">
                
                @Html.LabelFor(model => model.City)
                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @type = "text", @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })

            </div>
            <div class="form-group col-md-4">
                
                @Html.LabelFor(model => model.State)
                @Html.EditorFor(model => model.State, new { htmlAttributes = new { @type = "text", @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })

            </div>
            <div class="form-group col-md-2">
                
                @Html.LabelFor(model => model.Zipcode)
                @Html.EditorFor(model => model.Zipcode, new { htmlAttributes = new { @type ="text", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Zipcode, "", new { @class = "text-danger" })

            </div>
            <div>

                @Html.LabelFor(model => model.SignedDate)
                @Html.EditorFor(model => model.SignedDate, new { htmlAttributes = new { @class = "form-control", @type = "datetime", @placeholder = "2005/08/15 23:45:00" } })
                @Html.ValidationMessageFor(model => model.SignedDate, "", new { @class = "text-danger" })

            </div>
        </div>
    
        <button type="submit" class="btn btn-primary">Sign in</button>
    
    </form>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

}

